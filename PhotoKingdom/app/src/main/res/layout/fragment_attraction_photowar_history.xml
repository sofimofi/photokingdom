<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.senecacollege.prj666.photokingdom.AttractionPhotowarHistoryFragment">

    <TextView
        android:id="@+id/photoWarHistoryBannerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/banner"
        android:padding="5dp"
        android:text="Photo History of CN Tower"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/attractionPhotowarHistoryListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
