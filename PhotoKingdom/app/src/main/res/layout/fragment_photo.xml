<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ca.senecacollege.prj666.photokingdom.PhotoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/photoAttractionNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/banner"
        android:padding="10dp"
        android:text="Attraction Name"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/photoAttractionNameTextView"
        android:contentDescription="Photo" />

    <ImageView
        android:id="@+id/residentAvatarImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/photoImageView"
        android:layout_marginStart="20dp"
        android:contentDescription="Avatar Image of Resident"
        android:src="@drawable/ic_face_black_24dp"/>

    <TextView
        android:id="@+id/residentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/residentAvatarImageView"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/residentAvatarImageView"
        android:text="ResidentName"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/residentName"
        android:layout_alignBottom="@+id/residentName"
        android:layout_toLeftOf="@+id/pointsTextView"
        android:text="Pts: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pts"
        android:layout_alignBottom="@+id/pts"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:text="40"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/photoInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pointsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="14sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/viewPhotowarButton"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/photoInfoTextView"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="14dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/button"
        android:text="@string/view_photowar"
        android:textSize="12sp" />




</RelativeLayout>
